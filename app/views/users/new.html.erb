<%= form_for(@user) do |f| %>
<%= f.label :username %>
<%= f.text_field :username, placeholder: 'Please fill in your username here!' %>
<%= f.label :email %>
<%= f.text_field :email %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.submit "Signup!" %>
<% end %>