<h1> All reviews  </h1> 
    <ol>
        <% @reviews.each do |r| %>
            <li>
            Cafe Name: <%= r.shop.name %>
            <br>
            Average Rating of Cafe: <%= r.avg_rating %>
            <br>
            Review: <%= r.content %>
            <br>
            Rating: <%= r.rating %>
            <br>
            Username: <%= r.user.username %>
            <br>
            Date: <%= r.created_at.strftime("%b %d, %Y - %I:%M%p")%>
            </li>
          
            <br>  
        <% end %>  
    <ol>
 <br>

<% if @shop.reviews != current_user %>
    <%= link_to "Edit your review", edit_review_path, class: "btn" %>
    <%= link_to "Delete your review", review_path, method: 'delete', class: "btn" %>
<% end %>
      
<%= render "check_blank" %> 
<%= link_to "Back to the all cafe", shops_path, class: "btn" %>