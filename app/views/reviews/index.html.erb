<h1> All reviews </h1> 

    <ol>
        <% @reviews.each do |r| %>
            <li>
                Cafe Name: <%= r.shop.name %>
                <br>
                Average Rating of Cafe: <%= r.avg_rating %>
                <br>
                Review: <%= r.content %>
                <br>
                Rating: <%= r.rating %>
                <br>
                Username: <%= r.user.username %>
            </li>
                <br>      
        <% end %>  
    <ol>

    <% if @reviews.blank? %>
        <%= "No reviews just yet, would you like to add the first?" %>
        <%= link_to "Write a review", new_shop_review_path, class: "btn" %>
    <% end %>
